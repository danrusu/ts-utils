{
  "compilerOptions": {
    "outDir": "dist",

    "module": "NodeNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"], // add frontend types

    "declaration": true,
    "sourceMap": true,
    "allowJs": true,

    // strictness
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,

    "moduleDetection": "force" // treat all ts/js files as modules
  },
  "include": ["src", "test"]
}
